//打印杨辉三角 

#include<stdio.h>
#define N 10 
int main()
{
	int i,j;
	int a[N][N];	//定义数组保存每行的数据，没有用到0行 
	for(i=1;i<N;i++)	//初始化每一行对角线元素和第一个元素为1 
	{
		a[i][i]=1;
		a[i][1]=1;
	}
	for(i=3;i<N;i++)	//从第三行开始，生成从第一个元素到对角线元素的其他元素 
	{
		for(j=2;j<=i-1;j++)	//其他元素的生成规则是：该元素等于上一元素的同一列及 
		a[i][j]=a[i-1][j-1]+a[i-1][j];//前一列的两个元素之和 
	}
	for(i=1;i<N;i++)	//按一定的规则输出该数组 
	{
		for(j=1;j<=45-(i-1)*3;j++)	//控制每行空格 
			printf(" ");
		for(j = 1; j <= i; j++)		//控制元素输出 
			printf("%6d",a[i][j]);
			printf("\n");
	}
	return 0;
}


